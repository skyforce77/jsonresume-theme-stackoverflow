{{#if resume.references.length}}
{{#if resume.meta.properties.theme.skyoverflow.references.disabled}}{{else}}
<section class="section">
  <header>
    <h2 class='section-title'>
      {{#if resume.meta.properties.theme.skyoverflow.references.title}}
        {{resume.meta.properties.theme.skyoverflow.references.title}}
      {{else}}
        References
      {{/if}}
    </h2>
  </header>
  <section id="references">
    {{#each resume.references}}
    <div class="item">
      {{#if reference}}
      <blockquote class="reference">
        &#8220;&#32;{{reference}}&#32;&#8221;
      </blockquote>
      {{/if}}
      {{#if name}}
      <div class="name">
        {{name}}
      </div>
      {{/if}}
    </div>
    {{/each}}
  </section>
</section>
{{/if}}
{{/if}}